{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "IRIS Widget",
  "version": "0.1.0",
  "identifier": "com.iris.widget",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "IRIS Widget",
        "width": 800,
        "height": 600,
        "resizable": true,
        "maximizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "center": true,
        "visible": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
